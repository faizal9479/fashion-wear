<div class="row">
    <div class="col-md-6 m-auto mt-5">
        <div class="container mt-5 pl-4">
            <h2 class="text-center">Add A New Product</h2>
            <form action="/admin/add-slideshow" method="POST" enctype="multipart/form-data">
                <div class="form-group mb-3">
                    <label>1st Slideshow Image</label>
                    <br>
                    <input type="file" name="slide_image1" placeholder="Enter Price of the Product"
                        class="form-control mt-1">
                </div>
                <div class="form-group mb-3">
                    <label>2nd of The Product</label>
                    <br>
                    <input type="file" name="slide_image2" placeholder="Enter Price of the Product"
                        class="form-control mt-1">
                </div>
                <div class="form-group mb-3">
                    <label>3rd of The Product</label>
                    <br>
                    <input type="file" name="slide_image3" placeholder="Enter Price of the Product"
                        class="form-control mt-1">
                </div>
                <button type="submit" class="btn btn-dark float-right w-100">Add Product</button>
                <p class="pt-2">Back To Home ? <a href="/admin">Go Home</a></p>
            </form>
        </div>
    </div>
</div>